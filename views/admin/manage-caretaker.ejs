<!DOCTYPE html>
<html>
<head>
    <% include partials/header.ejs %>
</head>
<body>
<% include partials/navbar.ejs %>
<div class="container">
    <div class="row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">Manage Caretaker</div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                    <% } if (success) { %>
                        <div class="alert alert-success">
                            <%= success %>
                        </div>
                    <% } %>
                    <form method="post" action="/admin/manage-caretaker">
                        <div class="form-group">
                            <label for="username">User Name</label>
                            <input type="text" id="username" class="form-control" placeholder="User name"
                                   required="required" autofocus="autofocus" name="username">
                        </div>
                        <div class="form-group">
                            <label for="status">Status</label>
                            <select id="status" name="status" class="custom-select" required="required">
                                <option value="ft" selected>Full Time</option>
                                <option value="pt">Part Time</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include partials/bottomscript.ejs %>
</body>
</html>
