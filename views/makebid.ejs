<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Create Bid</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css"
        integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="stylesheets/index.css" rel="stylesheet">
</head>

<body id="page-top">
    <%- include navbar.ejs %>

    <div id="wrapper">
        <%- include sidebar.ejs %>

        <div id="content-wrapper">
            <div class="container-fluid">

                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-dice-d20"></i> &nbsp; Search Caretaker Availability 
                    </div>
                    <form method="post" action="/search_avail">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="date" class="col-sm-3 col-form-label"><b>Start Date:</b></label>
                                    <div class="col-sm-9">
                                        <input required="required" class="form-control" id="date" placeholder="2020-01-01"
                                               name="start_date" value="" type="date">
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="date2" class="col-sm-3 col-form-label"><b>End Date:</b></label>
                                    <div class="col-sm-9">
                                        <input required="required" class="form-control" id="date2" placeholder="2020-01-01"
                                               name="end_date" value="" type="date">
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="pet" class="col-sm-2 col-form-label"><b>Pet Name:</b></label>
                                    <div class="col-sm-4">
                                        <select name="type" class="custom-select">
                                            <% for(var i = 0; i < petname.length; i++) { %>
                                                <option>
                                                    <%= petname[i].pet_name %>
                                                </option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer small text-muted">
                            <button type="submit" class="btn btn-secondary">Add Pet</button>
                            <span class="badge badge-pill badge-info"><%= addpet_msg %></span>
                        </div>
                    </form>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-dice-d20"></i> &nbsp; Edit a pet's name
                    </div>
                
                    <form method="post" action="/update_pet">
                        <div class="card-body">

                            <div class="form-group row">
                                <label for="" class="col-sm-1 col-form-label"><b> Pet:</b></label>
                                <div class="col-sm-4">
                                    <select name="currname" class="custom-select">
                                        <% for(var i=0; i<pet_tbl.length; i++) { %>
                                        <option>
                                            <%= pet_tbl[i].pet_name %>
                                        </option>
                                        <% } %>
                                    </select>
                                </div>
                                
                                <label for="changename" class="col-sm-2 col-form-label"><b>New Name:</b></label>
                                <div class="col-sm-4">
                                    <input type="text" required="required" class="form-control" placeholder="New Name" name="newname">
                                </div>
                
                            </div>
                        </div>
                        <div class="card-footer small text-muted">
                            <button type="submit" class="btn btn-secondary">Update Name</button>
                            <span class="badge badge-pill badge-info"><%= updatepet_msg %></span>
                        </div>
                    </form>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-dice-d20"></i> &nbsp; Add special requirement for pet
                    </div>
                
                    <form method="post" action="/add_req">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="" class="col-sm-1 col-form-label"><b> Pet:</b></label>
                                <div class="col-sm-4">
                                    <select name="name" class="custom-select">
                                        <% for(var i=0; i<pet_tbl.length; i++) { %>
                                        <option>
                                            <%= pet_tbl[i].pet_name %>
                                        </option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">                          
                                <label for="specreq" class="col-sm-4 col-form-label"><b>Special Requirement:</b></label>
                                <div class="col-sm-8">
                                    <select name="specreqtype" class="custom-select">
                                        <% for(var i=0; i<specreq_tbl.length; i++) { %>
                                        <option>
                                            <%= specreq_tbl[i].special_requirement %>
                                        </option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer small text-muted">
                            <button type="submit" class="btn btn-secondary">Add Requirement</button>
                            <span class="badge badge-pill badge-info"><%= addreq_msg %></span>
                        </div>
                    </form>
                </div>


                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-dice-d20"></i> &nbsp; Change pet profile status
                    </div>
                
                    <form method="post" action="/change_pet_status">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label"><b> Pet:</b></label>
                                <div class="col-sm-4">
                                    <select name="name" class="custom-select">
                                        <% for(var i=0; i<pet_tbl.length; i++) { %>
                                        <option>
                                            <%= pet_tbl[i].pet_name %>
                                        </option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                
                            <div class="form-group row">
                                <label for="status" class="col-sm-2 col-form-label"><b>Status:</b></label>
                                <div class="col-sm-4">
                                    <select name="status" class="custom-select">                                
                                        <option>
                                            enabled
                                        </option>
                                        <option>
                                            disabled
                                        </option>
                                        
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer small text-muted">
                            <button type="submit" class="btn btn-secondary">Update Status</button>
                            <span class="badge badge-pill badge-info"><%=updatestat_msg  %></span>
                        </div>
                    </form>
                </div>


                
                <!-- list of pets -->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-dice-d20"></i> &nbsp; Your Pets
                    </div>

                    <% for(var i=0; i<pet_tbl.length; i++) { %>
                        <div class="card-header">
                            Pet <%= i + 1 %>
                        </div>

                        <form method="post" action="">
                            <div class="card">
                                <div class="card-body">
                                    <label for="changename" class="col-sm-10 col-form-label"><b>Current Details</b></label>

                                    <label for="name" class="col-sm-2 col-form-label"><b>Pet Name:</b> </label>
                                    <div class="col-sm-4">
                                        <input type="text" required="required" readonly class="form-control-plaintext" id="currname"
                                            value="<%= pet_tbl[i].pet_name %>" name="currname">
                                    </div>
                                    
                                    <label for="type" class="col-sm-10 col-form-label"> <b>Pet Type:</b> </label>
                                    <div class="col-sm-4">
                                        <input type="text" required="required" readonly class="form-control-plaintext" id="pettype"
                                            value="<%= pet_tbl[i].pet_type %>" name="pettype">
                                    </div>
                                    
                                    <label for="status" class="col-sm-10 col-form-label"> <b>Pet Status:</b> </label>
                                    
                                       
                                    <% if (pet_tbl[i].enabled === true) {%>
                                        <label for="status" class="col-sm-4 col-form-label">
                                            Enabled
                                        </label>
                                        <br>
                                    <% } else { %>
                                        <label for="status" class="col-sm-4 col-form-label">
                                            Disabled
                                        </label>
                                        <br>
                                    <% } %>
                                   

                                    
                                    <label for="specreq" class="col-sm-10 col-form-label"><b>Special Requirement:</b></label>
                                    <% for(var a=0; a<listspecreq_tbl.length; a++) { %>
                                        <% if (listspecreq_tbl[a].pet_name === pet_tbl[i].pet_name) {%>
                                        <label for="specreq" class="col-sm-4 col-form-label">
                                            <%= listspecreq_tbl[a].special_requirement %>
                                        </label>
                                        <br>
                                        <% } %>
                                    <% } %>
                                    
                            </div>          
                        </form>

                    <% } %>
                                
                </div>
            </div>
        </div>
    </div>

    <%- include bottomscript.ejs %>
</body>

</html>